
{% extends 'base.html.twig' %}

{% block body %}

<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <div class="navbar-brand">
      <div class="logo"><img src="{{ asset('images/logoStack.png') }}" alt="Logo" width="50" height="44"></div>
        <div class="titre">
          <p>Stack<strong>overmelow</strong></p>
        </div>
    </div>
    <div class="container-fluid">
      <form class="d-flex justify-content-end" role="search">
        <input class="form-control me-1 w-25" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline searchBtn" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>

<section class="questionList">
  <div class="topList">
    <h2>Top Questions</h2>
    {% block actions %}
      <a class="askBtn text-decoration-none d-flex align-items-center p-2" href="{{ path('app_forum') }}">Ask Question</a>
    {% endblock %}
  </div>

  {% for question in questions %}
    <hr>
    <div class="questionTitle">
      <h3>{{question.title}}</h3>
      <button class="btn btn-outline detailsBtn">Show details</button>
    </div>
  {% endfor %}

</section>
{% endblock %}